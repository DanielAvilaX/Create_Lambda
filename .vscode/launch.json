    "version": "0.2.0",
    "configurations": [

        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "Lambda: Login",
            "invokeTarget": {
                "target": "code",
                "projectRoot": "${workspaceFolder}/src",
                "lambdaHandler": "lambda_function.lambda_handler"
            },
            "lambda": {
                "runtime": "python3.12",
                "payload": {
                    "path": "./src/events/event.json" 
                },
                "environmentVariables": {}
            }
            
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}